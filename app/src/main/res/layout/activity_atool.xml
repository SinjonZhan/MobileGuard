<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lostfind_menu_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="visible">


    <TextView
        style="@style/tv_title"
        android:text="高级工具"/>

    <Button
        android:id="@+id/bt_addblackuser_byself"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:onClick="phoneQuery"
        android:text="手机归属地查询"
        android:textColor="#000000" />

    <Button
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"


        android:onClick="smsBackup"

        android:text="短信备份"
        android:textColor="#000000" />


    <ProgressBar
        android:id="@+id/pb_smsbackup_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"


        android:onClick="smsResume"

        android:text="短信还原"
        android:textColor="#000000" />

    <ProgressBar
        android:id="@+id/pb_smsresume_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_addblackuser_bysms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:drawableLeft="@android:drawable/btn_star_big_on"

        android:text="程序锁"
        android:textColor="#000000" />


</LinearLayout>