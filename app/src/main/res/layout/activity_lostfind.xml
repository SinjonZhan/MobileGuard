<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_activity_lostfind_title"
                style="@style/tv_title"
                android:text="手机防盗界面" />

            <Button

                android:id="@+id/bt_popup_window"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:text="菜单"
                android:textColor="#000000" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全号码："
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_lostfind_getsafename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="25sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_islostfind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防盗保护是否开启："
                android:textColor="#000000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_islostfind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_islostfind"

                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textColor="#000000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_enter_guideinterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/tv_clickstyle"
            android:clickable="true"
            android:text="重新进入设置向导界面"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:gravity="center_vertical"
            android:text="SIM卡变更报警"
            android:textColor="#000000"

            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:gravity="center_vertical"
            android:text="GPS追踪:"
            android:textColor="#000000"

            android:textSize="25sp"

            />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:gravity="center_vertical"
            android:text="远程锁屏"
            android:textColor="#000000"

            android:textSize="25sp"

            />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:gravity="center_vertical"
            android:text="远程清除数据"

            android:textColor="#000000"
            android:textSize="25sp" />


    </LinearLayout>


</RelativeLayout>
