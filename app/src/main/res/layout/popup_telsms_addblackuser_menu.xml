<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lostfind_menu_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="visible">


    <Button
        android:id="@+id/bt_addblackuser_byself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_normal"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="手动添加"
        android:textColor="#000000" />

    <Button
        android:id="@+id/bt_addblackuser_bycontacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_green_normal"
        android:drawableLeft="@android:drawable/btn_star_big_on"

        android:text="导联系人"
        android:textColor="#000000" />

    <Button
        android:id="@+id/bt_addblackuser_bylog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_normal"

        android:drawableLeft="@android:drawable/btn_star_big_on"

        android:text="通话记录"
        android:textColor="#000000" />

    <Button
        android:id="@+id/bt_addblackuser_bysms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_normal"

        android:drawableLeft="@android:drawable/btn_star_big_on"

        android:text="短信记录"
        android:textColor="#000000" />


</LinearLayout>