<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tv_clickstyle"
    android:clickable="true"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_telsmssafe_listview_item_safenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="110"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_telsmssafe_listview_item_mode"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/tv_telsmssafe_listview_item_safenumber"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="全部拦截"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <!--android:layout_toRightOf="@id/tv_setting_center_auto_update"-->
    <ImageView

        android:id="@+id/iv_telsmssafe_listview_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:clickable="false"

        android:src="@drawable/iv_delete_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_telsmssafe_listview_item_mode"

        android:layout_marginTop="5dp"
        android:background="@drawable/list_devider" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="nextPage"
            android:text="n" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="prevPage"
            android:text="p" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="endPage"
            android:text="e" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="jumpPage"
            android:text="j" />

        <EditText
            android:id="@+id/et_telsms_gotopage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:id="@+id/tv_telsms_totalpage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2/10" />
    </LinearLayout>

</RelativeLayout>
