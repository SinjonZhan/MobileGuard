<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tv_clickstyle"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_setting_center_auto_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="自动更新设置"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_setting_center_auto_update_content"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/tv_setting_center_auto_update_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="自动更新已经关闭"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <!--android:layout_toRightOf="@id/tv_setting_center_auto_update"-->
    <CheckBox
        android:id="@+id/cb_setting_center_auto_update_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"

        android:clickable="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_setting_center_auto_update_content"

        android:layout_marginTop="5dp"
        android:background="@drawable/list_devider" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="nextPage"
            android:text="n" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="prevPage"
            android:text="p" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="endPage"
            android:text="e" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="jumpPage"
            android:text="j" />

        <EditText
            android:id="@+id/et_telsms_gotopage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:id="@+id/tv_telsms_totalpage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2/10" />
    </LinearLayout>
</RelativeLayout>
